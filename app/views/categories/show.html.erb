<p style="color: green"><%= notice %></p>

<div class="container text-center" style="position: relative; width: 50%; max-width: 100%;">
  <img class="img-fluid" style="width: 80%; height: auto;" <%= image_tag @category.image if @category.image.attached? %> 
  <h1 style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 24px; font-weight: bold; text-align: center;"><%= @category.name %></h1>
</div>

<div class="text-center m-4"><%= @category.description %></div>

<div id="products" class="row row-cols-3" style="grid-template-columns: 1fr 1fr;">
  <% @category.products.each do |product| %>
    <div>
      <%= render "products/product", product: product, class:"text-center" %>
    </div>
  <% end %>
</div>

<% if current_admin %>
<div class="text-center d-flex justify-content-center gap-4">
  <%= link_to "Edit this category", edit_category_path(@category), class:"btn btn-primary" %> 
  <%= link_to "Back to categories", categories_path, class:"btn btn-secondary" %>
  <%= button_to "Delete this category", @category, method: :delete, class:"btn btn-danger" %>
</div>
<% end %>