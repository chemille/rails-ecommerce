<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, style: "display: block", class:"form-label" %>
    <%= form.text_field :name, class:"form-control", placeholder:"Category Name" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block", class:"form-label" %>
    <%= form.rich_textarea :description, class:"form-control", placeholder:"Category Description" %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div class="mt-4">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
